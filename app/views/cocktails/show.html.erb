<div class="card-product">
  <%= cl_image_tag @cocktail.photo.key, alt: "cocktail", crop: :scale %>
  <div class="card-product-infos">
    <h2><%= @cocktail.name %></h2>
    <% @cocktail.doses.each do |dose| %>
      <p><%= dose.description %> de : <%= dose.ingredient.name %>
        <button id="btn-trash" type="button" class="btn btn-outline-danger"> X </button>
        <%= link_to "", dose_path(dose), method: :delete, id: "delete-link", class: "hidden"%> </p>
    <% end %>
    <%= link_to new_cocktail_dose_path(@cocktail.id) do %>
      <i class="fas fa-cart-plus" id="btn-add"></i>
    <% end %>
  </div>
</div>





<%= link_to cocktails_path do %>
  <i class="fas fa-chevron-circle-left" id="btn-back"></i>
<% end %>

<%= link_to new_cocktail_review_path(@cocktail.id) do %>
  <i class="fas fa-pen" id="btn-pen"></i>
<% end %>


<% @cocktail.reviews.each do |review| %>
  <p><%= "★" * review.rating %><%= "☆" * (5 - review.rating) %> - <%= review.content %></p>
<% end %>
